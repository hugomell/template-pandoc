include = ["docs/weave.toml"]

[environment]
title = "{{project_name}}"
subtitle = "{{tag_line}}"

[[call]]
template = "pandoc"
collect = "html"
[call.args]
basename = ["index"]   # add your pages to this list

[[task]]
name = "copy-notebooks"
description = "Copy markdown files to docs/"
runner = "bash"
script = """
cp notebooks/*.md docs/
"""

[[task]]
name = "weave"
description = "Deploy site"
requires = ["#html", "#static"]

